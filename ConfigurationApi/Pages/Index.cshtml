@page

@model ConfigurationApi.Pages.IndexModel
@{
    ViewData["Title"] = "Seçil Store | Config Panel";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #ffffff;
            color: #333333;
        }

        header {
            background-color: #f8f8f8;
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

            header img {
                height: 70px;
                vertical-align: middle;
            }

            header h1 {
                display: inline-block;
                margin: 0 10px;
                font-size: 22px;
                vertical-align: middle;
                color: #444444;
                font-weight: 500;
            }

        .content {
            max-width: 1000px;
            margin: 40px auto;
            padding: 20px;
            background-color: #fafafa;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
        }

        h2 {
            color: #444;
            font-size: 20px;
        }

        input[type="text"],
        input[type="checkbox"] {
            padding: 10px;
            margin: 5px 10px 5px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #fff;
            color: #333;
        }

        form {
            margin-bottom: 30px;
        }

        button {
            padding: 10px 20px;
            background-color: #555;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            button:hover {
                background-color: #777;
            }

        #search {
            width: 100%;
            margin-bottom: 15px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            font-size: 14px;
        }

        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #f0f0f0;
            color: #333;
        }

        td {
            background-color: #ffffff;
            color: #555;
        }

        tr:hover td {
            background-color: #f9f9f9;
        }

        footer {
            margin-top: 50px;
            text-align: center;
            font-size: 13px;
            color: #006400;
        }
    </style>
</head>
<body>

    <header>
        <img src="~/images/secil-logo-black.png" alt="Seçil Logo" />
        <h1> | Config Panel</h1>
    </header>

    <div class="content">
        <h2>Yeni Ayar Ekle</h2>

        <form method="post" action="?handler=Add">
            @Html.AntiForgeryToken()

            <input type="text" name="NewConfig.Name" placeholder="Name" required />
            <input type="text" name="NewConfig.Type" placeholder="Type" required />
            <input type="text" name="NewConfig.Value" placeholder="Value" required />
            <input type="text" name="NewConfig.ApplicationName" placeholder="Application Name" required />
            <label>
                <input type="checkbox" name="NewConfig.IsActive" value="true" />
                Aktif mi?
            </label>
            <button type="submit">➕ Ekle</button>
        </form>

        <input type="text" id="search" placeholder="Ayarlarda ara..." onkeyup="filterTable()" />

        <table id="configTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Value</th>
                    <th>Application</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Configs)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Type</td>
                        <td>@item.Value</td>
                        <td>@item.ApplicationName</td>
                        <td>
                            <form method="post" action="?handler=Delete">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="Id" value="@item.Id" />
                                <button type="submit">🗑</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <footer>
        Protected by İpek Akdağ © @DateTime.Now.Year
    </footer>

    <script>
        function filterTable() {
            var input = document.getElementById("search");
            var filter = input.value.toLowerCase();
            var rows = document.querySelectorAll("#configTable tbody tr");

            rows.forEach(row => {
                var nameCell = row.cells[4].textContent.toLowerCase();
                if (nameCell.indexOf(filter) > -1) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }
    </script>

</body>
</html>